# ============================================================================
# CUSTOM OVERRIDES - These override Omarchy default keybindings
# ============================================================================

# Application bindings
$terminal = uwsm-app -- alacritty
$browser = omarchy-launch-browser

# --- Window Management Overrides ---
# Unbind Super+W and Super+T - keyd will remap them to Ctrl+W/T at kernel level
unbind = SUPER, W
unbind = SUPER, T
bindd = SUPER, Q, Close window, killactive,

# Rebind toggle floating from Super+T to Super+D
bindd = SUPER, D, Toggle floating, togglefloating,

# --- Navigation Overrides ---
# Unbind default Omarchy workspace navigation on arrow keys
# (Super+arrows are handled by keyd for macOS-style text navigation)
unbind = SUPER, LEFT
unbind = SUPER, RIGHT
unbind = SUPER, UP
unbind = SUPER, DOWN

# Unbind default Omarchy workspace switching on TAB
unbind = SUPER, TAB
unbind = SUPER SHIFT, TAB
unbind = SUPER CTRL, TAB

# Cycle focus between windows with Tab / Shift+Tab (instead of workspace switching)
bind = SUPER, TAB, cyclenext,
bind = SUPER, TAB, bringactivetotop,
bind = SUPER SHIFT, TAB, cyclenext, prev
bind = SUPER SHIFT, TAB, bringactivetotop,

# Switch workspaces with brackets (instead of arrow keys)
bind = SUPER SHIFT, bracketleft, workspace, r-1
bind = SUPER SHIFT, bracketright, workspace, r+1

# --- Scratchpad Overrides ---
# Keep Super+S for scratchpad toggle (from Omarchy default)
# Add Super+Alt/Shift+S for moving windows to scratchpad
bind = SUPER ALT, S, movetoworkspacesilent, special:scratchpad
bind = SUPER SHIFT, S, movetoworkspacesilent, special:scratchpad

# ============================================================================
# ADDITIONAL USEFUL BINDINGS - Non-conflicting Omarchy features
# ============================================================================

# --- Window Tiling Controls ---
bindd = SUPER, J, Toggle window split, togglesplit,
bindd = SUPER, P, Pseudo window, pseudo,
bindd = SUPER, F, Full screen, fullscreen, 0
bindd = SUPER CTRL, F, Tiled full screen, fullscreenstate, 0 2
bindd = SUPER ALT, F, Full width, fullscreen, 1
bindd = SUPER, O, Pop window out (float & pin), exec, omarchy-hyprland-window-pop
bindd = CTRL ALT, DELETE, Close all windows, exec, omarchy-hyprland-window-close-all

# --- Window Grouping ---
bindd = SUPER, G, Toggle window grouping, togglegroup
bindd = SUPER ALT, G, Move active window out of group, moveoutofgroup
bindd = SUPER ALT, TAB, Next window in group, changegroupactive, f
bindd = SUPER ALT SHIFT, TAB, Previous window in group, changegroupactive, b

# Join groups (Super+Shift+arrows are already used for swapping windows in Omarchy)
# These use Super+Alt+arrows which are free
bindd = SUPER ALT, LEFT, Move window to group on left, moveintogroup, l
bindd = SUPER ALT, RIGHT, Move window to group on right, moveintogroup, r
bindd = SUPER ALT, UP, Move window to group on top, moveintogroup, u
bindd = SUPER ALT, DOWN, Move window to group on bottom, moveintogroup, d

# Group navigation by number
bindd = SUPER ALT, 1, Switch to group window 1, changegroupactive, 1
bindd = SUPER ALT, 2, Switch to group window 2, changegroupactive, 2
bindd = SUPER ALT, 3, Switch to group window 3, changegroupactive, 3
bindd = SUPER ALT, 4, Switch to group window 4, changegroupactive, 4
bindd = SUPER ALT, 5, Switch to group window 5, changegroupactive, 5

# --- Window Resizing ---
bindd = SUPER, code:20, Expand window left, resizeactive, -100 0    # - key
bindd = SUPER, code:21, Shrink window left, resizeactive, 100 0     # = key
bindd = SUPER SHIFT, code:20, Shrink window up, resizeactive, 0 -100
bindd = SUPER SHIFT, code:21, Expand window down, resizeactive, 0 100

# --- Mouse Window Management ---
bindmd = SUPER, mouse:272, Move window, movewindow
bindmd = SUPER, mouse:273, Resize window, resizewindow
bindd = SUPER, mouse_down, Scroll active workspace forward, workspace, e+1
bindd = SUPER, mouse_up, Scroll active workspace backward, workspace, e-1
bindd = SUPER ALT, mouse_down, Next window in group, changegroupactive, f
bindd = SUPER ALT, mouse_up, Previous window in group, changegroupactive, b

# --- Menus & Utilities ---
bindd = SUPER, SPACE, Launch apps, exec, omarchy-launch-walker
bindd = SUPER CTRL, E, Emoji picker, exec, omarchy-launch-walker -m symbols
bindd = SUPER ALT, SPACE, Omarchy menu, exec, omarchy-menu
bindd = SUPER, ESCAPE, System menu, exec, omarchy-menu system
bindld = , XF86PowerOff, Power menu, exec, omarchy-menu system
bindd = SUPER, K, Show key bindings, exec, omarchy-menu-keybindings
bindd = , XF86Calculator, Calculator, exec, gnome-calculator

# --- Aesthetics & Transparency ---
bindd = SUPER SHIFT, SPACE, Toggle top bar, exec, omarchy-toggle-waybar
bindd = SUPER CTRL, SPACE, Next background in theme, exec, omarchy-theme-bg-next
bindd = SUPER SHIFT CTRL, SPACE, Theme menu, exec, omarchy-menu theme
bindd = SUPER, BACKSPACE, Toggle window transparency, exec, hyprctl dispatch setprop "address:$(hyprctl activewindow -j | jq -r '.address')" opaque toggle
bindd = SUPER SHIFT, BACKSPACE, Toggle workspace gaps, exec, omarchy-hyprland-workspace-toggle-gaps

# --- Notifications ---
bindd = SUPER, COMMA, Dismiss last notification, exec, makoctl dismiss
bindd = SUPER SHIFT, COMMA, Dismiss all notifications, exec, makoctl dismiss --all
bindd = SUPER CTRL, COMMA, Toggle silencing notifications, exec, makoctl mode -t do-not-disturb && makoctl mode | grep -q 'do-not-disturb' && notify-send "Silenced notifications" || notify-send "Enabled notifications"

# --- System Controls ---
bindd = SUPER CTRL, I, Toggle locking on idle, exec, omarchy-toggle-idle
bindd = SUPER CTRL, N, Toggle nightlight, exec, omarchy-toggle-nightlight
bindd = SUPER CTRL, T, Show time, exec, notify-send "    $(date +"%A %H:%M  —  %d %B W%V %Y")"
bindd = SUPER CTRL, B, Show battery remaining, exec, notify-send "󰁹    Battery is at $(omarchy-battery-remaining)%"

# --- Apple Display Brightness ---
bindd = CTRL, F1, Apple Display brightness down, exec, omarchy-cmd-apple-display-brightness -5000
bindd = CTRL, F2, Apple Display brightness up, exec, omarchy-cmd-apple-display-brightness +5000
bindd = SHIFT CTRL, F2, Apple Display full brightness, exec, omarchy-cmd-apple-display-brightness +60000

# --- Screenshots & Screen Capture ---
bindd = , PRINT, Screenshot with editing, exec, omarchy-cmd-screenshot
bindd = SHIFT, PRINT, Screenshot to clipboard, exec, omarchy-cmd-screenshot smart clipboard
bindd = ALT, PRINT, Screenrecording, exec, omarchy-menu screenrecord
bindd = SUPER, PRINT, Color picker, exec, pkill hyprpicker || hyprpicker -a

# --- File Sharing ---
bindd = SUPER CTRL, S, Share, exec, omarchy-menu share

# ============================================================================
# APPLICATION LAUNCHERS
# ============================================================================

# --- Native Applications ---
bindd = SUPER, RETURN, Terminal, exec, $terminal --working-directory="$(omarchy-cmd-terminal-cwd)"
bindd = SUPER SHIFT, F, File manager, exec, uwsm-app -- nautilus --new-window
bindd = SUPER SHIFT, B, Browser, exec, $browser
bindd = SUPER SHIFT ALT, B, Browser (private), exec, $browser --private
bindd = SUPER SHIFT, M, Music, exec, omarchy-launch-or-focus spotify
bindd = SUPER SHIFT, N, Editor, exec, omarchy-launch-editor
bindd = SUPER SHIFT, T, Activity, exec, $terminal -e btop
bindd = SUPER SHIFT, D, Docker, exec, $terminal -e lazydocker
bindd = SUPER SHIFT, G, Signal, exec, omarchy-launch-or-focus signal "uwsm-app -- signal-desktop"
bindd = SUPER SHIFT, O, Obsidian, exec, omarchy-launch-or-focus "^obsidian$" "uwsm-app -- obsidian -disable-gpu --enable-wayland-ime"
bindd = SUPER SHIFT, SLASH, Passwords, exec, uwsm-app -- 1password

# --- Web Applications ---
# If your web app url contains #, type it as ## to prevent hyperland treat it as comments
bindd = SUPER SHIFT, A, ChatGPT, exec, omarchy-launch-webapp "https://chatgpt.com"
bindd = SUPER SHIFT ALT, A, Grok, exec, omarchy-launch-webapp "https://grok.com"
bindd = SUPER SHIFT, E, Email, exec, omarchy-launch-webapp "https://app.hey.com"
bindd = SUPER SHIFT, Y, YouTube, exec, omarchy-launch-webapp "https://youtube.com/"
bindd = SUPER SHIFT ALT, G, WhatsApp, exec, omarchy-launch-or-focus-webapp WhatsApp "https://web.whatsapp.com/"
bindd = SUPER SHIFT CTRL, G, Google Messages, exec, omarchy-launch-or-focus-webapp "Google Messages" "https://messages.google.com/web/conversations"
bindd = SUPER SHIFT, X, X, exec, omarchy-launch-webapp "https://x.com/"
bindd = SUPER SHIFT ALT, X, X Post, exec, omarchy-launch-webapp "https://x.com/compose/post"

# ============================================================================
# HARDWARE-SPECIFIC BINDINGS
# ============================================================================

# --- Screen Brightness Controls ---
# Unbind Omarchy defaults first to override with hardware-specific settings
unbind = , XF86MonBrightnessUp
unbind = SHIFT, XF86MonBrightnessUp
unbind = , XF86MonBrightnessDown
unbind = SHIFT, XF86MonBrightnessDown

{{- $isMacHardware := or (contains "MacBook" (output "cat" "/sys/class/dmi/id/product_name" | trim)) (contains "Mac" (output "cat" "/sys/class/dmi/id/sys_vendor" | trim)) }}
{{- if $isMacHardware }}
# Mac laptop keys
# Screen brightness (with key repeat)
binde = , XF86MonBrightnessUp, exec, brightnessctl set 5%+
binde = , XF86MonBrightnessDown, exec, brightnessctl set 5%-
binde = , F2, exec, brightnessctl set 5%+
binde = , F1, exec, brightnessctl set 5%-

# Keyboard backlight (with key repeat)
binde = , F6, exec, /usr/local/bin/kbd-backlight-up
binde = , F5, exec, /usr/local/bin/kbd-backlight-down
{{- else }}
# Dell laptop keys
# Screen brightness (F6 = down, F7 = up, with key repeat)
binde = , XF86MonBrightnessUp, exec, brightnessctl set 5%+
binde = , XF86MonBrightnessDown, exec, brightnessctl set 5%-
binde = , F7, exec, brightnessctl set 5%+
binde = , F6, exec, brightnessctl set 5%-

# Keyboard backlight toggle (no repeat)
bindd = , F5, Keyboard backlight toggle, exec, /usr/local/bin/kbd-backlight-toggle
{{- end }}
