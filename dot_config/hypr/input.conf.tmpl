# Control your input devices
# See https://wiki.hypr.land/Configuring/Variables/#input
{{- $isMacHardware := or (contains "MacBook" (output "cat" "/sys/class/dmi/id/product_name" | trim)) (contains "Mac" (output "cat" "/sys/class/dmi/id/sys_vendor" | trim)) }}
{{- $enableSwapCaps := ne (lookPath "hyprctl") "" }}
input {
  # Keyboard layout (hardware-specific: Mac vs standard)
{{- if $isMacHardware }}
  kb_layout = gb
  kb_variant = mac
  kb_model = pc105
  kb_options = compose:caps{{ if $enableSwapCaps }},ctrl:swapcaps{{ end }}
{{- else }}
  kb_layout = gb
  kb_options = compose:caps,altwin:swap_alt_win{{ if $enableSwapCaps }},ctrl:swapcaps{{ end }}
{{- end }}

  # Change speed of keyboard repeat
  repeat_rate = 40
  repeat_delay = 600

  # Start with numlock on by default
  numlock_by_default = true

  # Increase sensitivity for mouse/trackpad (default: 0)
  # sensitivity = 0.35

  touchpad {
    # Use natural (inverse) scrolling
    # natural_scroll = true

    # Use two-finger clicks for right-click instead of lower-right corner
    # clickfinger_behavior = true

    # Control the speed of your scrolling
    scroll_factor = 0.4
  }
}

# Scroll nicely in the terminal
windowrule = scrolltouchpad 1.5, class:(Alacritty|kitty)
windowrule = scrolltouchpad 0.2, class:com.mitchellh.ghostty

# Enable touchpad gestures for changing workspaces
# See https://wiki.hyprland.org/Configuring/Gestures/
# gesture = 3, horizontal, workspace
